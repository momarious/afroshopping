{% extends 'base.html.twig' %}

{% block title %}Mes adresses{% endblock %}

{% block content %}
    <a href="{{ path('account_address_add') }}" class="btn btn-info btn-sm float-right">Ajouter une adresse</a>
    <h1>Mes adresses </h1>
    Gerer vos adresses
    <a href="{{ path('account') }}">Retour</a>
    <hr>

    {% if app.user.addresses | length == 0 %}
        <p>Vous n'avez pas ajoutÃ© d'adresse dans votre compte client. <a href="{{ path('account_address_add') }}">Cliquer
                ici...</a></p>
    {% else %}
        <div class="row">
            {% for item in app.user.addresses %}
                <div class="col-md-4">
                    <div class="card" style="width: 18rem;">
                        <div class="card-body">
                            <h5 class="card-title">{{ item.name }}</h5>
                            <p class="card-text">{{ item.address }} <br>
                                {{ item.postal }}, {{ item.city }}, {{ item.country }}
                            </p>
                            <a href="{{ path('account_address_edit', {'id' : item.id}) }}">Modifier</a> |
                            <a href="{{ path('account_address_delete', {'id':item.id}) }}">Supprimer</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}

{% endblock %}
