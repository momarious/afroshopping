{% extends 'base.html.twig' %}

{% block title %}Valider ma commande{% endblock %}

{% block javascript %} <script src="https://js.stripe.com/v3/"></script> {% endblock %}

{% block content %}

    <h1>Recapitilatif de la commande✅</h1>
    <p>Verifier vos informations avant de payer</p>
    <hr>
    <div class="row">
        <div class="col-md-6">
            <strong>Mon adresse de livraison</strong>
            <div class="form-check">
                {{ delivery | raw }}
            </div>
            <strong>Mon transporteur</strong>
            <div class="form-check">
                {{ carrier.name }} <br>
                {{ carrier.description }} <br>
                {{ (carrier.price) | number_format(2, ',', '.') }} €
            </div>
        </div>
        <div class="col-md-6">
            <strong>Ma commande</strong> <br>
            <div class="eshop-order-summary">
                {% set total = null %}
                {% for item in cart %}
                    <div class="row">
                        <div class="col-2"><img src="/uploads/{{ item.product.illustration }}"
                                                alt="{{ item.product.name }}"
                                                height="65px"></div>
                        <div class="col-8 my-auto"> {{ item.product.name }}<br>
                            <small>{{ item.product.subtitle }}
                                <br>
                                x {{ item.quantity }}
                            </small>
                        </div>
                        <div class="col-2">
                            <td>{{ (item.product.price*item.quantity/100) | number_format(2, ',', '.') }} €</td>
                        </div>
                    </div>
                    {% set total = total + (item.product.price*item.quantity) %}
                {% endfor %}
            </div>

            <hr>
            <strong>Montant total: </strong> {{ (total/100) | number_format(2, ',', '.') }} €<br>
            <strong>Livraison: </strong> {{ (carrier.price) | number_format(2, ',', '.') }} €<br>
            <hr>
            <strong>Total: </strong> {{ ((total/100)+(carrier.price)) | number_format(2, ',', '.') }} €
            <a id="checkout-button"
               class="btn btn-success btn-block mt-3">Payer {{ ((total/100)+(carrier.price)) | number_format(2, ',', '.') }}
                €</a>
        </div>
    </div>
{% endblock %}

{% block script %}
    <script>
        var stripe = Stripe('pk_test_51JYW6fIyWISoWdIjJXptMZcKOR8ZfyHf3rGXgHNo3BITstDYqqZpIva0JzS2jYWe9HYga4RkQyzsBrA0tVf4OAiy00fXWyuVue');
        var checkoutButton = document.getElementById('checkout-button');

        checkoutButton.addEventListener('click', () => {

            fetch('/order/create-session/{{ reference }}', {
                method: "POST"
            })
                .then((response) => {
                    return response.json();
                })
                .then((session) => {
                    if (session.error == 'order') {
                        window.loginForm.replace('{{ path('order') }}')
                    } else {
                        stripe.redirectToCheckout({
                            sessionId: session.id
                        });
                    }
                })
                .then((result) => {
                    if (result.error) {
                        alert(result.error.message);
                    }
                })
                .catch((error) => {
                    console.error("error", error);
                });
        });
    </script>
{% endblock %}
